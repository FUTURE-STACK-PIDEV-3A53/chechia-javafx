<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.example.model.Game?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" stylesheets="@styles/application.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.GameRoomFormController">
    <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label fx:id="titleLabel" text="Add New Game Room">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
            </columnConstraints>
            
            <Label text="Game:" GridPane.rowIndex="0" />
            <ComboBox fx:id="gameComboBox" maxWidth="Infinity" promptText="Select Game" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Location:" GridPane.rowIndex="1" />
            <TextField fx:id="locationField" maxWidth="Infinity" promptText="Enter location" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Date:" GridPane.rowIndex="2" />
            <DatePicker fx:id="datePicker" maxWidth="Infinity" promptText="Select date" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="Time:" GridPane.rowIndex="3" />
            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <TextField fx:id="hourField" prefWidth="60.0" promptText="HH" />
                <Label text=":" />
                <TextField fx:id="minuteField" prefWidth="60.0" promptText="MM" />
            </HBox>
            
            <Label text="Bot Enabled:" GridPane.rowIndex="4" />
            <CheckBox fx:id="botEnabledCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>
        
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
            <Button fx:id="saveButton" defaultButton="true" onAction="#handleSave" text="Save" />
        </HBox>
    </VBox>
</AnchorPane> 