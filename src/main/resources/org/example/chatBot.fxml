<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.ChatBotController"
      styleClass="chat-container"
      spacing="10">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Assistant chatbot" styleClass="chat-title"/>
    <Label text="Posez vos questions sur le jeu" styleClass="chat-subtitle"/>
    
    <ScrollPane fx:id="scrollPane" styleClass="chat-scroll-pane" VBox.vgrow="ALWAYS" fitToWidth="true">
        <VBox fx:id="chatBox" styleClass="chat-messages" spacing="10"/>
    </ScrollPane>
    
    <HBox styleClass="chat-input-container" spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="messageInput" styleClass="chat-input-field" HBox.hgrow="ALWAYS" promptText="Tapez votre message ici..."/>
        <Button fx:id="sendButton" styleClass="send-button" text="Envoyer" onAction="#handleSendMessage"/>
    </HBox>
</VBox> 