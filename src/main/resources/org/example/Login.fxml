<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" styleClass="content-area" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.LoginController"
      stylesheets="@styles.css">
    
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <VBox styleClass="form-container" maxWidth="400" spacing="20">
        <Label text="Bienvenue" styleClass="title-label">
            <font>
                <Font size="32.0"/>
            </font>
        </Label>
        
        <Label text="Connectez-vous à votre compte" styleClass="subtitle-label"/>
        
        <TextField fx:id="emailField" promptText="Email" styleClass="form-field"/>
        <PasswordField fx:id="passwordField" promptText="Mot de passe" styleClass="form-field"/>
        
        <Label fx:id="errorLabel" styleClass="error-label"/>
        
        <Button fx:id="loginButton" text="Se connecter" onAction="#handleLogin" styleClass="primary-button" maxWidth="Infinity"/>
        
        <HBox spacing="10" alignment="CENTER">
            <Label text="Pas encore de compte ?"/>
            <Button fx:id="registerButton" text="S'inscrire" onAction="#handleRegister" styleClass="link-button"/>
        </HBox>
        
        <Separator/>
        
        <VBox spacing="10" styleClass="admin-section">
            <Label text="Accès Administrateur" styleClass="subtitle-label"/>
            <TextField fx:id="adminCodeField" promptText="Code administrateur" styleClass="form-field"/>
            <Button fx:id="adminButton" text="Connexion Admin" onAction="#handleAdminLogin" styleClass="admin-button" maxWidth="Infinity"/>
        </VBox>
    </VBox>
</VBox> 