<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.RegisterController"
      stylesheets="@styles.css">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Register" styleClass="title-label"/>

    <TextField fx:id="usernameField" promptText="Username" styleClass="text-field"/>
    <TextField fx:id="emailField" promptText="Email" styleClass="text-field"/>
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="text-field"/>
    
    <Label fx:id="errorLabel" styleClass="error-label"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="registerButton" text="Register" onAction="#handleRegister" styleClass="primary-button"/>
        <Button fx:id="backButton" text="Back to Login" onAction="#handleBack" styleClass="secondary-button"/>
    </HBox>
</VBox> 