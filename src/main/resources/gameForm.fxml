<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" styleClass="dialog-content" style="-fx-background: #1a1a1a;" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.GameFormController">
    <!-- Title Section -->
    <HBox styleClass="dialog-header" style="-fx-background-color: #2b2b2b; -fx-padding: 20;">
        <Label fx:id="titleLabel" text="Add New Game" styleClass="dialog-title" 
               style="-fx-text-fill: #ff0000; -fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Form Content -->
    <ScrollPane fitToWidth="true" styleClass="edge-to-edge" style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox spacing="20.0" style="-fx-padding: 20; -fx-background-color: #1a1a1a;">
            <GridPane hgap="15.0" vgap="15.0" styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="120.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="250.0"/>
                </columnConstraints>

                <!-- Name Field -->
                <Label text="Name:" styleClass="form-label" 
                       style="-fx-font-weight: bold; -fx-text-fill: white;" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" styleClass="form-field" 
                          style="-fx-padding: 8; -fx-background-radius: 4; -fx-background-color: #2b2b2b;
                                 -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 4;" 
                          GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- Description Field -->
                <Label text="Description:" styleClass="form-label" 
                       style="-fx-font-weight: bold; -fx-text-fill: white;" GridPane.rowIndex="1"/>
                <TextArea fx:id="descriptionArea" styleClass="form-field" 
                         style="-fx-padding: 8; -fx-background-radius: 4; -fx-background-color: #2b2b2b;
                                -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 4;
                                -fx-control-inner-background: #2b2b2b;"
                         wrapText="true" prefRowCount="3" 
                         GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Players Field -->
                <Label text="# Players:" styleClass="form-label" 
                       style="-fx-font-weight: bold; -fx-text-fill: white;" GridPane.rowIndex="2"/>
                <TextField fx:id="playersField" styleClass="form-field" 
                          style="-fx-padding: 8; -fx-background-radius: 4; -fx-background-color: #2b2b2b;
                                 -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 4;" 
                          GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Picture Path Field -->
                <Label text="Picture:" styleClass="form-label" 
                       style="-fx-font-weight: bold; -fx-text-fill: white;" GridPane.rowIndex="3"/>
                <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <TextField fx:id="picturePathField" styleClass="form-field" 
                              style="-fx-padding: 8; -fx-background-radius: 4; -fx-background-color: #2b2b2b;
                                     -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 4;" 
                              HBox.hgrow="ALWAYS"/>
                    <Button fx:id="browseButton" text="Browse..." 
                            onAction="#handleBrowsePicture" 
                            styleClass="action-button"
                            style="-fx-background-color: #404040; -fx-text-fill: white; 
                                   -fx-padding: 8 15; -fx-background-radius: 4;"/>
                </HBox>

                <!-- File Path Field -->
                <Label text="File Path:" styleClass="form-label" 
                       style="-fx-font-weight: bold; -fx-text-fill: white;" GridPane.rowIndex="4"/>
                <TextField fx:id="filePathField" styleClass="form-field" 
                          style="-fx-padding: 8; -fx-background-radius: 4; -fx-background-color: #2b2b2b;
                                 -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 4;" 
                          GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- Image Preview -->
                <Label text="Preview:" styleClass="form-label" 
                       style="-fx-font-weight: bold; -fx-text-fill: white;" GridPane.rowIndex="5"/>
                <StackPane styleClass="image-preview-container" 
                          style="-fx-background-color: #2b2b2b; -fx-padding: 10; 
                                 -fx-border-color: #404040; -fx-border-radius: 4; 
                                 -fx-background-radius: 4;" 
                          GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <ImageView fx:id="imagePreview" fitHeight="150.0" fitWidth="200.0" 
                              preserveRatio="true"/>
                </StackPane>
            </GridPane>
        </VBox>
    </ScrollPane>

    <!-- Buttons Section -->
    <HBox spacing="10.0" alignment="CENTER_RIGHT" styleClass="dialog-buttons" 
          style="-fx-padding: 20; -fx-background-color: #2b2b2b; -fx-border-color: #404040; 
                 -fx-border-width: 1 0 0 0;">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" 
                styleClass="primary-button"
                style="-fx-background-color: #ff0000; -fx-text-fill: white; 
                       -fx-padding: 10 20; -fx-background-radius: 4;"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" 
                styleClass="secondary-button"
                style="-fx-background-color: #404040; -fx-text-fill: white; 
                       -fx-padding: 10 20; -fx-background-radius: 4;"/>
    </HBox>
</VBox> 