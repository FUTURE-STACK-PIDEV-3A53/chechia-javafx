<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.RegisterController">
    <VBox alignment="CENTER" maxWidth="400" spacing="15" styleClass="form-container" StackPane.alignment="CENTER">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>

        <Label styleClass="title-label" text="Create Account" />

        <!-- Basic Info -->
        <VBox maxWidth="400" spacing="15">
            <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
            <Label fx:id="usernameValidationLabel" styleClass="error-label" />
            
            <TextField fx:id="emailField" promptText="Email" styleClass="text-field" />
            <Label fx:id="emailValidationLabel" styleClass="error-label" />
            
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />
            <Label fx:id="passwordValidationLabel" styleClass="error-label" />
            
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="text-field" />
            <Label fx:id="confirmPasswordValidationLabel" styleClass="error-label" />
            
            <ComboBox fx:id="nationalityBox" promptText="Nationality" styleClass="text-field" />
            <Label fx:id="nationalityValidationLabel" styleClass="error-label" />
        </VBox>

        <Button fx:id="registerButton" onAction="#handleRegister" styleClass="primary-button" text="Register" />
        <Button fx:id="backButton" onAction="#handleBack" styleClass="secondary-button" text="Back to Login" />
        <Label fx:id="errorLabel" styleClass="error-label" />
    </VBox>
</StackPane>
