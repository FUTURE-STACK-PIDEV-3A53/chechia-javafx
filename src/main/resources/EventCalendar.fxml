<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="org.example.controller.EventCalendarController"
            style="-fx-background-color: #141414;">
    
    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Calendrier des Événements" style="-fx-text-fill: #E50914; -fx-font-size: 32px; -fx-font-weight: bold;"/>
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="previousMonthButton" text="&lt;" onAction="#handlePreviousMonth" 
                        style="-fx-background-color: #E50914; -fx-text-fill: white; -fx-font-size: 18px; -fx-min-width: 50px; -fx-min-height: 40px;"/>
                <Label fx:id="monthYearLabel" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Button fx:id="nextMonthButton" text="&gt;" onAction="#handleNextMonth"
                        style="-fx-background-color: #E50914; -fx-text-fill: white; -fx-font-size: 18px; -fx-min-width: 50px; -fx-min-height: 40px;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <GridPane fx:id="calendarGrid" hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
            </columnConstraints>
            <!-- Les jours de la semaine -->
            <Label text="Dim" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label text="Lun" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Mar" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Label text="Mer" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            <Label text="Jeu" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
            <Label text="Ven" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
            <Label text="Sam" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnIndex="6" GridPane.rowIndex="0"/>
        </GridPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Button text="Fermer" onAction="#handleClose" 
                    style="-fx-background-color: #E50914; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 100px; -fx-min-height: 40px;"/>
        </HBox>
    </bottom>
    
</BorderPane> 