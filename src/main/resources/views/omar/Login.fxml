<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chechia.tn.controllers.omar.LoginController">
    <center>
        <VBox alignment="CENTER" maxWidth="400.0" spacing="20.0" styleClass="login-form">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <Label text="Connexion Administrateur" styleClass="title">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Separator />

            <GridPane hgap="10.0" vgap="15.0">
                <Label text="Nom d'utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="usernameField" promptText="Entrez votre nom d'utilisateur" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                </rowConstraints>
            </GridPane>

            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="loginButton" onAction="#handleLogin" styleClass="button-primary" text="Connexion" prefWidth="120.0" />
                <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="button-secondary" text="Annuler" prefWidth="120.0" />
            </HBox>

            <Separator />

            <Button fx:id="quickLoginButton" onAction="#handleQuickLogin" styleClass="button-success" text="AccÃ¨s Rapide" prefWidth="200.0">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>

            <Label fx:id="statusLabel" styleClass="status-label" textFill="RED" />
        </VBox>
    </center>

    <stylesheets>
        <String fx:value="/chechia/tn/css/omar.css" />
    </stylesheets>
</BorderPane>