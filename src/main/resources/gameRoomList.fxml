<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import java.lang.Boolean?>
<?import java.time.LocalDateTime?>

<VBox spacing="20.0" styleClass="content-area" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.GameRoomListController">
    <!-- Title -->
    <Label text="Manage Game Rooms" styleClass="title-label">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <!-- Search and Filter Controls -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search game rooms..." prefWidth="300.0"/>
        <Button fx:id="sortByIdButton" text="Sort by ID" onAction="#handleSortById"/>
    </HBox>

    <!-- Game Room Table -->
    <TableView fx:id="gameRoomTableView" VBox.vgrow="ALWAYS" styleClass="custom-table">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0"/>
            <TableColumn fx:id="gameColumn" text="Game" prefWidth="200.0"/>
            <TableColumn fx:id="locationColumn" text="Location" prefWidth="200.0"/>
            <TableColumn fx:id="dateTimeColumn" text="Date/Time" prefWidth="200.0"/>
            <TableColumn fx:id="botEnabledColumn" text="Bot Enabled" prefWidth="100.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="adminButton" text="Admin Access" onAction="#handleAdminAccess"/>
        <Button fx:id="addButton" text="Add Room" onAction="#handleAddGameRoom"/>
        <Button fx:id="editButton" text="Edit Room" onAction="#handleEditGameRoom"/>
        <Button fx:id="deleteButton" text="Delete Room" onAction="#handleDeleteGameRoom"/>
    </HBox>
</VBox> 